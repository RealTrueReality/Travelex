<div class="flex flex-col h-full bg-background-light dark:bg-background-dark select-none">
    <div class="h-[72px] px-4 py-4 bg-background-light dark:bg-background-dark flex items-center justify-between relative">
        <div class="flex-1">@TopBarLeft</div>
        <h1 class="text-text-light dark:text-text-dark text-lg font-bold">@TopBarTitle</h1>
        <div class="flex-1 flex justify-end">@TopBarRight</div>
    </div>
    @PageBody
</div>

@code {
    [Parameter] public RenderFragment? TopBarLeft { get; set; }
    [Parameter] public RenderFragment? TopBarRight { get; set; }
    [Parameter] public RenderFragment? TopBarTitle { get; set; }
    [Parameter] public RenderFragment? PageBody { get; set; }
}