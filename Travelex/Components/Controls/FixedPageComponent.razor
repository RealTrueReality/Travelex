<div class="flex flex-col min-h-screen bg-white select-none">
    <div class="flex items-center px-4 py-4">
        <div class="w-6">@TopBarLeft</div>
        <h1 class="flex-grow text-lg font-bold text-center text-[#111416] items-center">@TopBarTitle</h1>
        <div class="w-6">@TopBarRight</div>
    </div>
    @PageBody
</div>

@code {
    [Parameter] public RenderFragment? TopBarLeft { get; set; }
    [Parameter] public RenderFragment? TopBarRight { get; set; }
    [Parameter] public RenderFragment? TopBarTitle { get; set; }
    [Parameter] public RenderFragment? PageBody { get; set; }
}